# ░▀▀▀░▀░▀░▀░▀░░▀░

#----------------
#-- Variables: --
#----------------

  # mod keys:
  set $mod Mod4
  set $alt Mod1
  set $ctrl Control

  # better navigation:
  set $left h
  set $down j
  set $up k
  set $right l

  # default variables for workspace: 
  set $ws1 "1" 
  set $ws2 "2"    
  set $ws3 "3"
  set $ws4 "4"
  set $ws5 "5"
  set $ws6 "6"
  set $ws7 "7"
  set $ws8 "8"
  
  # default terminal:
  set $term alacritty

  # fonts:
  font pango:Liga SFMono Nerd Font 8

#----------------------
#-- Monitors Output: --
#----------------------  
  
  # display output
  output LVDS-1 resolution 1366x768@60.030Hz

  # disable xorg
  xwayland enable

  # default wallpaper
  output * bg /home/mao/.wallpaper/NOW AKIRA IS WAKING UP!.png fill
  
  # mouse output configuration:
  mouse_warping none
  focus_follows_mouse no
  seat * hide_cursor 5000

#------------------
#-- UI settings: --
#------------------

  # theme variable:
  set $cursor_theme volantes_cursors
  set $cursor_size 16

  exec_always {
    gsettings set org.gnome.desktop.interface cursor-theme $cursor_theme
    gsettings set org.gnome.desktop.interface cursor-size $cursor_size
  }

#-------------------
#-- Applications: --
#-------------------

  # notification:
  exec mako
  bindsym $mod+Escape exec makoctl dismiss -a

  # launcher:
  set $menu rofi -show drun | xargs swaymsg exec --

  # browser:
  set $browser brave

  # file:
  set $file thunar

  # text editor:
  set $code alacritty -e nvim

  # network manager:
  set $nmtui alacritty -e nmtui

  # start a terminal:
  bindsym $mod+Return exec $term
  bindsym $mod+m exec alacritty -e btm

  # start browser:
  bindsym $mod+b exec notify-send "Starting Brave..." --expire-time=1500; exec $browser 

  # start text editor:
  bindsym $mod+n exec $code

  # kill focused window:
  bindsym $mod+q kill

  # start launcher:
  bindsym $mod+d exec $menu

  # start file:
  bindsym $mod+t exec $file

  # lock:
  bindsym $mod+ctrl+l exec swaylock -f -c 000000 

  # reload the configuration file:
  bindsym $mod+Shift+c reload

  # network manager:
  bindsym $mod+Shift+n exec $nmtui

  # logout session:
  bindsym $mod+Shift+e exec wlogout 
  
  # screeenshot:
  bindsym $mod+Print	exec grimshot --notify save active
	bindsym Shift+Print	exec grimshot --notify save area
	bindsym Print		exec grimshot --notify save output
	bindsym Ctrl+Print	exec grimshot --notify save window

#------------
#-- Rules: --
#------------

  # window rules:
  for_window [app_id="brave-browser"] border none, move to workspace $ws2
  for_window [app_id="mpv"] floating enable, border pixel 2
  for_window [app_id="thunar"] floating enable, move to workspace $ws3
  for_window [class="Lxappearance"] floating enable, border pixel 2
  for_window [class="feh"] floating enable, border none
  for_window [class="Spotify"] move to workspace $ws6

#-------------------------
#-- Workspaces and Nav: --
#-------------------------

  # change focus:
  bindsym $mod+$left focus left
  bindsym $mod+$down focus down
  bindsym $mod+$up focus up
  bindsym $mod+$right focus right

  # alternatively cursor keys:
  bindsym $mod+Left focus left
  bindsym $mod+Down focus down  
  bindsym $mod+Up focus up
  bindsym $mod+Right focus right

  # switch to workspace:
  bindsym $mod+1 workspace number $ws1
  bindsym $mod+2 workspace number $ws2
  bindsym $mod+3 workspace number $ws3
  bindsym $mod+4 workspace number $ws4
  bindsym $mod+5 workspace number $ws5
  bindsym $mod+6 workspace number $ws6
  bindsym $mod+7 workspace number $ws7
  bindsym $mod+8 workspace number $ws8
  bindsym $mod+9 workspace number $ws9
  bindsym $mod+0 workspace number $ws10

#------------------
#-- Layout suff: --
#------------------

  # splits for vertical and horizontal orientation:
  bindsym $mod+ctrl+h splith
  bindsym $mod+ctrl+v splitv

  # switch differant layout:
  bindsym $mod+s layout stacking
  bindsym $mod+w layout tabbed
  bindsym $mod+e layout toggle split

  # focus fullscreen:
  bindsym $mod+f fullscreen

  # mouse button for dragging:
  floating_modifier $mod normal

  # toggle floating mode:
  bindsym $mod+Shift+space floating toggle

  # swap focus between: 
  bindsym $mod+space focus mode_toggle

  # move focus to parent container:
  bindsym $mod+a focus parent

  # switch tabs:
  bindsym $mod+Tab workspace back_and_forth

#-----------------
#-- Scratchpad: --
#-----------------

  # move foccused window to scratchpad;
  bindsym $mod+Shift+minus move scratchpad

  # show or hide scratchpad window;
  bindsym $mod+minus scratchpad show
#--------------------------
#-- Resizing containers: --
#--------------------------
  # resize mode:
  bindsym $mod+r mode "resize"
mode "resize" {
  bindsym $left resize shrink width 10px
  bindsym $down resize grow height 10px
  bindsym $up resize shrink height 10px
  bindsym $right resize grow width 10px

  bindsym Left resize shrink width 10px
  bindsym Down resize grow height 10px
  bindsym Up resize shrink height 10px
  bindsym Right resize grow width 10px

  bindsym Return mode "default"
  bindsym Escape mode "default"
  }


#---------------------------
#-- Graphical appearance: --
#---------------------------
  
  # borders:
  default_border pixel 2
  default_floating_border pixel 2
  
  # gaps between windows:
  gaps inner 2
  gaps outer 4

# waybar:
bar {
    swaybar_command waybar
}

# colors:
set $bg         #1b1e2b
set $white      #FFFFFF
set $white-alt  #959dcb
set $cyan       #89ddff

client.focused          $bg  $bg  $cyan      $white-alt $white-alt

# keyboard layout:
input type:keyboard {
    xkb_layout us
    xkb_options ctrl:nocaps,compose:rwin
    repeat_delay 300
    repeat_rate 40
}

include /etc/sway/config.d/*
